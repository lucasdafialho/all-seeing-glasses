# Configurações da aplicação
APP_NAME=Sistema de Óculos Assistivos
VERSION=1.0.0

# Servidor
HOST=0.0.0.0
PORT=8000

# Modelo YOLO
YOLO_MODEL=yolov8n.pt
MODELS_DIR=models
CONFIDENCE_THRESHOLD=0.35

# Text-to-Speech
TTS_ENGINE=pyttsx3
TTS_RATE=180
TTS_VOLUME=0.9
TTS_VOICE_INDEX=0

# Detecção
MIN_DETECTION_INTERVAL=2.0
MAX_DETECTIONS_PER_FRAME=5

# CORS
CORS_ORIGINS=*
